{
  "name": "spotiffy-dock",
  "version": "1.0.0",
  "description": "A Spotify dock with auto-hide and lyrics display",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run start\" \"npm run watch\"",
    "watch": "webpack --mode development --watch",
    "build": "webpack --mode production",
    "dist": "electron-builder",
    "setup": "node setup.js"
  },
  "keywords": [
    "spotify",
    "dock",
    "widget",
    "lyrics",
    "music"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "@babel/preset-react": "^7.23.3",
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.2",
    "css-loader": "^6.8.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "html-webpack-plugin": "^5.5.3",
    "style-loader": "^3.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "framer-motion": "^10.16.5",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "build": {
    "appId": "com.spotiffy.dock",
    "productName": "Spotiffy Dock",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "dist/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis"
    }
  }
}
